<%- include('../layouts/adminheader'); %>

<h2 class="page-title">Edit a Category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
<br><br>
<form action="/admin/categories/edit-category/<%= id %>" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" name="title" value="<%= title %>" placeholder="Title" class="form-control">
    </div>

    <button class="btn btn-secondary">Submit</button>
</form>

<%- include('../layouts/adminfooter'); %>